# ============================================================================
# ASTRO-ASIX ERP - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ENVIRONMENT=production  # development, staging, production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=axis_db
DB_USER=postgres
DB_PASSWORD=your-strong-database-password

# For asyncpg connection (used by FastAPI)
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# For managed PostgreSQL (DigitalOcean, AWS RDS, etc.)
# DATABASE_URL=postgresql+asyncpg://username:password@your-db-host:25060/axis_db?sslmode=require

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8004
WORKERS=2  # Number of Uvicorn workers (recommended: 2-4 for production)

# ============================================================================
# CORS SETTINGS
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,https://yourdomain.com

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================
FRONTEND_BUILD_PATH=../frontend/build

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-different-from-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=ASTRO-ASIX ERP

# ============================================================================
# SMS CONFIGURATION (Optional - for attendance notifications)
# ============================================================================
SMS_PROVIDER=twilio  # twilio, nexmo, etc.
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/app.log

# ============================================================================
# REDIS (Optional - for caching and session management)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ============================================================================
# COMPANY SETTINGS
# ============================================================================
COMPANY_NAME=ASTRO-ASIX
COMPANY_EMAIL=info@astroasix.com
COMPANY_PHONE=+234-803-332-8385
COMPANY_ADDRESS=Your Company Address Here
COMPANY_CURRENCY=NGN  # Nigerian Naira

# ============================================================================
# PAYMENT SETTINGS (Optional - for payroll)
# ============================================================================
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# ============================================================================
# BACKUP SETTINGS
# ============================================================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Cron expression: daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ============================================================================
# MONITORING & PERFORMANCE
# ============================================================================
ENABLE_METRICS=True
SENTRY_DSN=  # Optional: Sentry error tracking
PROMETHEUS_PORT=9090  # Optional: Prometheus metrics

# ============================================================================
# DOCKER SPECIFIC (When running in containers)
# ============================================================================
# These are set in docker-compose.yml, but can be overridden here
# DB_HOST=db  # Service name in docker-compose
# REDIS_HOST=redis

# ============================================================================
# DEVELOPMENT ONLY (NEVER use in production!)
# ============================================================================
# DEBUG=True
# RELOAD=True  # Auto-reload on code changes
# LOG_LEVEL=DEBUG
